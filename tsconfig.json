{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@ng-stuttgart/webpage/data-access": [
        "libs/webpage/data-access/src/index.ts"
      ],
      "@ng-stuttgart/webpage/feature/team": [
        "libs/webpage/feature/team/src/index.ts"
      ],
      "@ng-stuttgart/webpage/feature/join": [
        "libs/webpage/feature/join/src/index.ts"
      ],
      "@ng-stuttgart/webpage/feature/archive": [
        "libs/webpage/feature/archive/src/index.ts"
      ],
      "@ng-stuttgart/webpage/feature/home": [
        "libs/webpage/feature/home/src/index.ts"
      ],
      "@ng-stuttgart/webpage/ui/header": ["libs/webpage/ui/header/src/index.ts"]
    },
    "rootDir": "."
  },
  "exclude": ["node_modules", "tmp"]
}
